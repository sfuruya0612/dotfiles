{
  "npm.binPath": "/opt/homebrew/bin/yarn",
  "explorer.width": 40,
  "explorer.toggle": true,
  "explorer.focus": true,
  "explorer.quitOnOpen": false,
  "explorer.previewAction.onHover": "content",
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nerdfont.vim",
  "explorer.file.showHiddenFiles": true,
  "explorer.file.column.clip.copy": "",
  "explorer.file.column.clip.cut": "",
  "explorer.keyMappings.global": {
    "s": "open:split",
    "v": "open:vsplit"
  },
  "coc.preferences.formatOnSave": true,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    },
    "erlang": {
      "command": "erlang_ls",
      "filetypes": [
        "erlang"
      ]
    }
  },
  "ruff.autoFixOnSave": true,
  "ruff.serverPath": "/opt/homebrew/bin/ruff-lsp",
  "snippets.ultisnips.pythonPrompt": false
}
