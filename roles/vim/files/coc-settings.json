{
    "npm.binPath": "/opt/homebrew/bin/yarn",
    "explorer.width": 40,
    "explorer.toggle": true,
    "explorer.focus": true,
    "explorer.quitOnOpen": false,
    "explorer.previewAction.onHover": "content",
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "nerdfont.vim",
    "explorer.file.showHiddenFiles": true,
    "explorer.file.column.clip.copy": "",
    "explorer.file.column.clip.cut": "",
    "explorer.keyMappings.global": {
        "s": "open:split",
        "v": "open:vsplit"
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "elixir",
        "yaml",
        "markdown"
    ],
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "erlang": {
            "command": "erlang_ls",
            "filetypes": [
                "erlang"
            ]
        },
        "jedi": {
            "enable": true,
            "startupMessage": false,
            "executable.command": "jedi-language-server",
            "filetypes": [
                "python"
            ]
        }
    },
    "snippets.ultisnips.pythonPrompt": false
}
